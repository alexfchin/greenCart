{
  "manifest_version": 2,
  "name": "greenBasket",
  "description": "Know the truth behind how green the companies you are buying from really are.",
  "version": "0.2",

  "permissions": ["declarativeContent", "storage", "activeTab","tabs"],

  "content_scripts": [
  {
    "matches": [
      "https://www.amazon.com/*"
    ],
    "css": ["main.css"],
    "js": ["content.js"]
  }
  ],

  "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

  "page_action": {
    "default_popup": "popup.html",
    "default_title": "Custom page",
    "default_icon": {
        "16": "images/greenBasket_icon16.png",
        "32": "images/greenBasket_icon32.png",
        "48": "images/greenBasket_icon48.png",
        "128": "images/greenBasket_icon128.png"
      }
  }
}
